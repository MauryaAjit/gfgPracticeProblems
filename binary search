class Solution {
    public int binarysearch(int[] arr, int n, int k) {
        int low = 0, high = n - 1;
        int result = -1; // To store index if found

        while (low <= high) {
            int mid = low + (high - low) / 2;

            if (arr[mid] == k) {
                result = mid; // store index
                high = mid - 1; // move left to find smallest index
            } else if (arr[mid] < k) {
                low = mid + 1;
            } else {
                high = mid - 1;
            }
        }

        return result;
    }
}
